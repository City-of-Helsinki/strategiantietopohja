{%
  set classes = [
    'article-table-of-contents',
  ]
%}
{%
  set title_classes = [
    'label',
  ]
%}
<button class="dropbtn">{{ 'Table of contents'|t }}</button>
<div{{ attributes.addClass(classes) }}>
  <span{{ title_attributes.addClass(title_classes) }}>{{ 'Table of contents'|t }}: </span>
  <ul class="article-toc">
    {% for item in toc %}
      <li class="item"><a href="{{ item.link_url }}">{{ item.section}}Â {{ item.title }}</a></li>
      {% if item.children %}
        <ul class="children">
          {% for child in item.children %}
            <li class="item"><a href="{{ child.link_url }}">{{ child.section}} {{ child.title }}</a></li>
          {% endfor %}
        </ul>
      {% endif %}
    {% endfor %}
  </ul>
</div>
